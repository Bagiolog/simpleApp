<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    tools:context="features.loginFragment">

    <TextView
        android:id="@+id/tUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/eUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tUsername"
        android:layout_centerHorizontal="true"
        android:hint="@string/eUsername"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/ePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eUsername"
        android:layout_centerHorizontal="true"
        android:hint="@string/ePassword"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ePassword"
        android:layout_alignEnd="@+id/eUsername"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="0dp"
        android:text="@string/bLogin"
        android:layout_marginRight="0dp"
        android:layout_alignRight="@+id/eUsername" />

    <Button
        android:id="@+id/bfingerPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="@string/fingerprint" />

</RelativeLayout>